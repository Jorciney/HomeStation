<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/electricityTitleTextView"
        style="@style/Weather_Main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="@string/energyConsumption"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chartElectricityGraphicImage"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/electricity_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/electricity_data_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_gravity="left"
            android:text="25/02/2015" />

        <TextView
            android:id="@+id/electricity_data_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_gravity="right"
            android:text="620.00" />

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/electricity_data_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="Date: 11/1/2011     Value: 101"
            android:textSize="15sp" />
    </ScrollView>

</LinearLayout>